<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_dialog"
    android:background="@drawable/bg_round_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:textSize="16sp"
            android:text="版本更新"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/dialog_text"
            android:text="是否下载最新版本？"
            android:textSize="20sp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="30dp"
            android:paddingBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdbdb"/>

        <!--一行并排平分的按钮-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_cancelled"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_left_white"
                android:text="取消"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dcdbdb"/>

            <Button
                android:id="@+id/button_confirmed"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_dialog_right_white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="确认"/>

        </LinearLayout>
</LinearLayout>